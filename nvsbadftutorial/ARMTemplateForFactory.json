													"type": "Expression"
												},
												"RunID": {
													"value": "'@{pipeline().RunId}'",
													"type": "Expression"
												},
												"TriggerName": {
													"value": "'@{pipeline().TriggerTime}'",
													"type": "Expression"
												},
												"logFileName": {
													"value": "'@{variables('logFileName')}'",
